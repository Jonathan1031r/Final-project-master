<center>
	<div class="container-fluid">
		<div class="col-sm-6 purchase-div">
			<div>
				Your order:
				<strong><%= @title %></strong>
			</div>
			<img src="http://img14.deviantart.net/60ed/i/2015/123/8/a/polymer_clay_green_vine_vase_by_mandarinmoon-d22ye3p.jpg" width="200" height="200">
			<div>
				Description: <%= @description%>
			</div>
			<div>
				Price: $ <%= @price %>
			</div>
		</div>
		<div class="col-sm-6 purchase-div pull-right">
			<form class="form-horizontal">
			  <div class="form-group">
			    <label for="inputEmail3" class="col-sm-2 control-label">First Name:</label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputEmail3" placeholder="Johnny">
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-sm-2 control-label">Last Name:</label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputPassword3" placeholder="AppleSeed">
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputEmail3" class="col-sm-2 control-label">Address:</label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputEmail3" placeholder="1122 Leaf St">
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-sm-2 control-label">City:</label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputPassword3" placeholder="Miami">
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputEmail3" class="col-sm-2 control-label">State:</label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputEmail3" placeholder="Florida">
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-sm-2 control-label">Zip:</label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputPassword3" placeholder="33132">
			    </div>
			  </div>
			</form>
			<a href="/"><input class="btn btn-success" type="button" onclick="alert('Your order has been shipped!')" value="Ship to this address"></a>	
		</div>
	</div>	
</center>